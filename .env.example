# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database"
PGHOST="localhost"
PGPORT="5432"
PGUSER="postgres"
PGPASSWORD="your-password"
PGDATABASE="timesync_pro"

# Authentication (Replit)
SESSION_SECRET="your-secure-session-secret-change-this-in-production"
REPLIT_DOMAINS="localhost:5000,www.wemakemarin.com"
ISSUER_URL="https://replit.com/oidc"
REPL_ID="your-repl-id"

# Application Environment
NODE_ENV="development"
PORT="5000"

# QuickBooks Integration (Optional)
QUICKBOOKS_CLIENT_ID="your-quickbooks-client-id"
QUICKBOOKS_CLIENT_SECRET="your-quickbooks-client-secret"
QUICKBOOKS_DISCOVERY_DOCUMENT="https://developer.api.intuit.com/.well-known/connect_from_oauth2"
QUICKBOOKS_SANDBOX_BASE_URL="https://sandbox-quickbooks.api.intuit.com"

# Production QuickBooks Settings
